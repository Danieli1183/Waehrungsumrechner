<Window x:Class="Waehrungsumrechner.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Waehrungsumrechner.ViewModels"
        Title="Währungsrechner" Height="150" Width="550">
    <Window.DataContext>
        <vm:CurrencyConverterViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Quelle -->
        <ComboBox Grid.Row="0" Grid.Column="0"
              ItemsSource="{Binding Currencies}"
              SelectedItem="{Binding SourceCurrency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
              DisplayMemberPath="Name"
              IsEditable="True"
              IsTextSearchEnabled="True"
              TextSearch.TextPath="Name"
              VerticalAlignment="Center"
              Margin="0,0,8,0"/>
        <TextBlock Grid.Row="0" Grid.Column="1"
               Text="{Binding SourceCurrency.Code}"
               VerticalAlignment="Center"/>
        <TextBlock Grid.Row="0" Grid.Column="2"
               Text="→"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               FontSize="16"
               Margin="8,0"/>
        <TextBox Grid.Row="0" Grid.Column="3"
             Text="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
             VerticalAlignment="Center"/>

        <!-- Ziel -->
        <ComboBox Grid.Row="1" Grid.Column="0"
              ItemsSource="{Binding Currencies}"
              SelectedItem="{Binding TargetCurrency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
              DisplayMemberPath="Name"
              IsEditable="True"
              IsTextSearchEnabled="True"
              TextSearch.TextPath="Name"
              VerticalAlignment="Center"
              Margin="0,8,8,0"/>
        <TextBlock Grid.Row="1" Grid.Column="1"
               Text="{Binding TargetCurrency.Code}"
               VerticalAlignment="Center"/>
        <TextBlock Grid.Row="1" Grid.Column="2"
               Text="="
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               FontSize="16"
               Margin="8,0"/>
        <TextBlock Grid.Row="1" Grid.Column="3"
               Text="{Binding Converted, StringFormat=N4}"
               VerticalAlignment="Center"/>
    </Grid>
</Window>
